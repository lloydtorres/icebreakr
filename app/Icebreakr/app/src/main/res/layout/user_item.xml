<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/name_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        card_view:cardBackgroundColor="@android:color/white"
        card_view:contentPadding="20dp" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/name"
                android:tag="name"
                android:textSize="20sp"
                android:fontFamily="sans-serif"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:textColor="#596a7e"
                android:singleLine="true"
                tools:text="Paradiso di Salvadore" />
            <TextView
                android:id="@+id/distance"
                android:tag="distance"
                android:paddingTop="10dp"
                android:textSize="12sp"
                android:fontFamily="sans-serif"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/name"
                android:textColor="#596a7e"
                tools:text="Distance: 0.88 m" />
            <TextView
                android:id="@+id/desc_text"
                android:paddingTop="10dp"
                android:textSize="12sp"
                android:fontFamily="sans-serif"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/distance"
                android:textColor="#596a7e"
                android:text="@string/desc_label" />
            <TextView
                android:id="@+id/desc"
                android:tag="desc"
                android:textSize="15sp"
                android:fontFamily="sans-serif"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/desc_text"
                android:ellipsize="end"
                android:textColor="#596a7e"
                tools:text="I am a student in Waterloo Engineering." />
            <TextView
                android:id="@+id/interests_text"
                android:textSize="12sp"
                android:paddingTop="10dp"
                android:fontFamily="sans-serif"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/desc"
                android:textColor="#596a7e"
                android:text="@string/interests_label" />
            <TextView
                android:id="@+id/interests"
                android:tag="interests"
                android:textSize="15sp"
                android:fontFamily="sans-serif"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/interests_text"
                android:ellipsize="end"
                android:textColor="#596a7e"
                tools:text="Books, books, books, books, books" />
        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>